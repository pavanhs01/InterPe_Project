    }

    .calculator {
      background: #222;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0px 0px 20px rgba(0,0,0,0.5);
    }

    .display {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
    }

    .display input {
      flex: 1;
      height: 60px;
      font-size: 25px;
      text-align: right;
      padding-right: 10px;
      background: gray;
      color: #0f0;
      border: none;
      border-radius: 10px;
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 70px);
      grid-gap: 10px;
    }

    button {
      height: 60px;
      font-size: 20px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      background: #333;
      color: white;
      box-shadow: inset -2px -2px 5px rgba(0,0,0,0.5), 
                  inset 2px 2px 5px rgba(255,255,255,0.1);
    }

    button.operator {
      color: #0f0;
    }

    button.special {
